<header class="navbar navbar-fixed-top navbar-inverse" id="header">
  <div class="container">
    <%= link_to "Task App", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Top", root_path, class: "header-list" %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path, class: "header-list" %></li>
          <li><%= link_to "タスク作成", new_user_task_path(current_user), class: "header-list" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle header-list" data-toggle="dropdown" id="dropdown-title">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="dropdown-header">User</li>
              <li><%= link_to "Show", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="dropdown-header">Task</li>
              <li><%= link_to "Task-index", user_tasks_path(current_user) %></li>

              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path, class: "header-list" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
