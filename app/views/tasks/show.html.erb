<% provide(:title, @user.name) %>

  <h1>タスク詳細</h1>
  
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table table-bordered", id= "table-task">
        <tbody>
          <tr>
            <th class="active col-md-2"><%= Task.human_attribute_name :id %></th>
            <td class="col-md-10"><%= @task_id %></td>
          </tr>
          <tr>
            <th class="active"><%= Task.human_attribute_name :name %></th>
            <td><%= @task_name %></td>
          </tr>
          <tr>
            <th class="active"><%= Task.human_attribute_name :description %></th>
            <td>
            </td>
          </tr>
          <tr>
            <th class="active"><%= Task.human_attribute_name :created_at %></th>
            <td><%= l(@task_id.created_at, format: :long) %></td>
          </tr>
          <tr>
            <th class="active"><%= Task.human_attribute_name :updated_at %></th>
            <td><%= l(@task_id.updated_at, format: :long) %></td>
          </tr>
        </tbody>
      </table>
      
      <div>
        <%= link_to "編集", edit_user_task_path(@user, @task_id), class: "btn btn-lg btn-success" %>
        <%= link_to "削除", user_task_path(@user, @task_id), method: :delete, 
        data: { confirm: "「#{@task_id.name}」を削除します。よろしいですか？" }, class: "btn btn-lg btn-danger" %>
      </div>
    </div>
  </div>