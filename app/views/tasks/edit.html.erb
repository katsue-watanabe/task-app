<% provide(:title, 'Task Edit') %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, local: true, url: user_task_path(@user, @task)) do |f| %>
      <%= render 'shared/error_messages', obj: @task %>
      
      <%= f.label :'名称', class: "label-task--edit" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :'詳細', class: "label-task--edit" %>
      <%= f.text_area :description, rows: 5, class: "form-control" %>

      <%= f.submit "更新", class: "btn btn-primary btn--edit" %>
      <%= link_to "キャンセル", user_tasks_path(@user, @task), class: "btn btn-default btn-form" %>
    <% end %>
  </div>
</div>