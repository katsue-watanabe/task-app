<% provide(:title, 'Task Edit') %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, local: true) do |f| %>
      <%= render 'shared/error_messages', obj: @user %>
      
      <%= f.label :name, class: "label-task--edit" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :description, class: "label-task--edit" %>
      <%= f.text_area :description, rows: 5, class: "form-control" %>

      <%= link_to "更新", user_task_path, class: "btn btn-primary btn-form" %>
      <%= link_to "キャンセル", user_tasks_path(@user), class: "btn btn-default btn-form" %>
    <% end %>
  </div>
</div>