<% provide(:title, 'New Task') %>

<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url_tasks_path,(@user), local: true), do |task| %>
      <%= render partial: 'shered/eror_messages' locals { obj: @task } %>
      
      <%= f.label :name, class: "label_form" %>
      <%= f.text.field :name, class: "form_control" %>
      
      <%= f.label :discription, class: "label_form" %>
      <%= f.text.area :discription, rows: 5, class: "form_control" %>
      
      <%= f.submit "新規登録", class: "btn btn-praimry btn-form" %>
    <% end %>
  </div>
</div>