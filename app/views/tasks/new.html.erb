<% provide(:title, 'Task New') %>
<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, local: true, url: user_tasks_path(@user)) do |f| %>
      <%= render 'shared/error_messages', obj: @task %>
      
      <%= f.label :名称, class: "label-task" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :詳細, class: "label-task" %>
      <%= f.text_area :description, rows: 5, class: "form-control" %>
      
      <%= f.submit "新規登録", class: "btn btn-primary btn-task" %>
    <% end %>
  </div>
</div>
